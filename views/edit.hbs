<card class="card card-body">
    <h2>Video Ideas</h2>
    <form action="/edit/{{this.results.id_uuid}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            {{!-- {{#each results}} --}}
            <label for="title">Title</label>
            <input type="text" class="form-control" name="title" value="{{this.results.title}}" >
        </div>
        <div class="form-group">
            <label for="details">Details</label>
            <textarea class="form-control" name="details"> {{this.results.details}}</textarea>
            {{!-- {{/each}} --}}
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</card>